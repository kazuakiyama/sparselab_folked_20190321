.SUFFIXES: .f .o
#-------------------------------------------------------------------------------
# Check OS
UNAME_S := $(shell uname -s)
ifeq ($(UNAME_S),Linux)
  OSTYPE="LINUX"
else
  ifeq ($(UNAME_S),Darwin)
    OSTYPE="OSX"
	else
	  OSTYPE="OSX"
	endif
endif
#-------------------------------------------------------------------------------
# Fortran Compiler
FC=@FC@

# Optimization Flag
ifeq ($(OSTYPE),"LINUX")
  FCFLAGS_OPT=-Ofast -march=native
else
  FCFLAGS_OPT=-Ofast -march=core2
endif

# command options for Debugging
DBG_FLAG=@dbg_flag@
ifeq ($(DBG_FLAG),True)
	FCFLAGS_DBG=-g -Wall -pedantic -fbounds-check -O -Wuninitialized -ffpe-trap=invalid,zero,overflow -fbacktrace
else
	FCFLAGS_DBG=
endif

FCFLAGS_OMP=-fopenmp
FCFLAGS_BLAS=@blaslib@

# set command options
FCFLAGS=-fPIC @LDFLAGS@ $(FCFLAGS_DBG) $(FCFLAGS_OPT) $(FCFLAGS_BLAS) $(FCFLAGS_OMP)


#-------------------------------------------------------------------------------
all: liblbfgsb.a

liblbfgsb.a: lbfgsb.o linpack.o timer.o
	ar rsc liblbfgsb.a lbfgsb.o linpack.o timer.o

.f.o:
	$(FC) -c $< $(FCFLAGS)

lbfgsb.o: linpack.o timer.o

install: all

clean:
	rm -f *.o *.a

uninstall: clean
	rm -f makefile
